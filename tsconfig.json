{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": false,
    "declarationMap": false,
    "noEmit": false,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "removeComments": true,
    /* Additional Checks */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist",
    "paths": {
      "@/*": ["./src/renderer/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["test", "release/app/dist", ".erb/dll"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
