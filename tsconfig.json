{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["dom", "esnext"],
    "noEmit": false,
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/renderer/*"]
    }
  },
  "exclude": ["out", "templates", "assets"]
}
