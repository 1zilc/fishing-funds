{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["dom", "esnext"],
    "noEmit": false,
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/renderer/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "exclude": ["test", "release/app/dist", "templates", "assets", ".erb/dll"]
}
