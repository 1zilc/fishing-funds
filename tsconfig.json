{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "noEmit": false,
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/renderer/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["test", "release/app/dist", ".erb/dll"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "Node16",
      "moduleResolution": "Node16"
    }
  }
}
